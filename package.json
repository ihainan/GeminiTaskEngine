{
  "name": "@aizgc/task-engine-cc",
  "version": "1.0.0",
  "description": "Generic task execution engine with Claude Code SDK support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:claude": "node examples/test-claude-engine.js",
    "test:simple-claude": "node --loader ts-node/esm examples/test-simple-claude.js",
    "test:no-mcp": "node --loader ts-node/esm examples/test-simple-no-mcp.js",
    "test:js": "node examples/test-simple-compiled.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "keywords": [
    "task-engine",
    "strategy-pattern",
    "llm",
    "automation",
    "execution-engine"
  ],
  "author": "AIZGC Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.80",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aizgc/task-engine.git"
  },
  "bugs": {
    "url": "https://github.com/aizgc/task-engine/issues"
  },
  "homepage": "https://github.com/aizgc/task-engine#readme"
}
